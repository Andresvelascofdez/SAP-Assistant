# Variables de entorno para desarrollo local
# Copiar a .env.local y personalizar

# Base de datos
DATABASE_URL=postgresql+asyncpg://postgres:changeme@localhost:5432/sapisu
POSTGRES_PASSWORD=changeme

# Qdrant
QDRANT_URL=http://localhost:6333
QDRANT_COLLECTION=sapisu_knowledge

# OpenAI
OPENAI_API_KEY=your_openai_api_key_here
EMBEDDING_MODEL=text-embedding-3-small
LLM_MODEL=gpt-4o-mini

# Autenticaci√≥n
JWT_SECRET=your_very_long_and_secure_secret_key_here_change_in_production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# API
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true
API_LOG_LEVEL=info

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000
ALLOWED_METHODS=GET,POST,PUT,DELETE,PATCH
ALLOWED_HEADERS=*

# Rate limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Chunk settings
CHUNK_SIZE=800
CHUNK_OVERLAP=150
MAX_CHUNKS_PER_DOC=50

# RAG settings
TOP_K_INITIAL=30
TOP_K_FINAL=5
RERANK_ENABLED=false

# Timezone
TZ=Europe/Nicosia

# Backup settings
BACKUP_ENABLED=true
BACKUP_SCHEDULE_CRON=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
